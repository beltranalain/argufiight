# ==============================================
# ArguFight / Honorable.AI - Environment Variables
# ==============================================

# ----------------------------------------------
# Database (Supabase PostgreSQL)
# ----------------------------------------------

# Pooled connection (Transaction mode, port 6543) - for application queries
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true

# Direct connection (Session mode, port 5432) - for Prisma migrations
DIRECT_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# ----------------------------------------------
# Authentication
# ----------------------------------------------

# Secret key for JWT tokens and session encryption
# Generate with: openssl rand -hex 32
AUTH_SECRET=your_random_secret_key_here

# ----------------------------------------------
# File Storage (Vercel Blob)
# ----------------------------------------------

BLOB_READ_WRITE_TOKEN=your_vercel_blob_token

# ----------------------------------------------
# AI APIs
# ----------------------------------------------

# DeepSeek API for AI verdicts and bot responses
DEEPSEEK_API_KEY=sk-your_deepseek_api_key

# Optional: OpenAI API (if using GPT models)
# OPENAI_API_KEY=sk-your_openai_api_key

# ----------------------------------------------
# Stripe Payments
# ----------------------------------------------

# Stripe API keys (get from stripe.com dashboard)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Stripe webhook secret for event verification
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ----------------------------------------------
# Push Notifications (Web Push / VAPID)
# ----------------------------------------------

# Generate with: node scripts/generate-vapid-keys.js
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# ----------------------------------------------
# Error Monitoring (Sentry)
# ----------------------------------------------

# Sentry DSN for error tracking and performance monitoring
# Get from sentry.io project settings
NEXT_PUBLIC_SENTRY_DSN=https://your-key@o0.ingest.sentry.io/project-id

# Optional: Sentry auth token for source maps upload
# SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ----------------------------------------------
# Rate Limiting (Upstash Redis)
# ----------------------------------------------

# Upstash Redis for serverless rate limiting
# Get from upstash.com database dashboard
UPSTASH_REDIS_URL=https://your-database-id.upstash.io
UPSTASH_REDIS_TOKEN=your_upstash_rest_token

# ----------------------------------------------
# Feature Flags
# ----------------------------------------------

# Enable/disable belt system
ENABLE_BELT_SYSTEM=true

# ----------------------------------------------
# Optional: Legacy/Backup URLs
# ----------------------------------------------

# Prisma Data Platform (deprecated, kept for reference)
# POSTGRES_URL=postgres://...
# PRISMA_DATABASE_URL=prisma+postgres://...

# ----------------------------------------------
# Development Only
# ----------------------------------------------

# Next.js development mode
# NODE_ENV=development

# Disable telemetry
# NEXT_TELEMETRY_DISABLED=1

# Enable debug logging
# DEBUG=true
